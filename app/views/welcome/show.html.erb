<% provide(:title, 'Sign In')%>
<h2>Welcome to Land Plot Management</h2>
<div class="row">
	<div class="col-md-6 col-offset-3">	
		<div class="panel panel-primary">
		<div class="panel-heading">Please Sign In</div>
		<div class="panel-body">
		<%= form_for(:session, url: sessions_path, method: "post") do |f| %>
			<div class="form-group">		
			<%= f.label :email,class: "col-md-3 control-label" %>
			<%= f.text_field :email, class: "form-control" %>
			</div>
			<div class="form-group">
			<%= f.label :password,class: "col-md-3 control-label" %>
			<%= f.password_field :password, class: "form-control" %>
			</div>
			<%= f.submit "Sign In", class: "btn btn-sm btn-primary", style: "width: 120px"  %>
		<% end %>
		</div>
	</div>
</div>
