<!DOCTYPE html>
<html>
<head>
	<title><%= content_for?(:title) ? yield(:title) : "Land Plot" %></title>
  	<%= stylesheet_link_tag    "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
  	<%= csrf_meta_tags %>
	<script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
</head>
<body>
	<%= render "layouts/header" if !content_for?(:hide_header) %>
	<div class="container">
		<% flash.each do |key, value| %>
			<div class="alert alert-<%= key %>"><%= value %></div>
		<% end %>
		<%= yield %>
		<%= yield :scripts %>

		<%= debug(params) if Rails.env.development? %>
	</div>
	<%= render "layouts/footer" if !content_for?(:hide_footer) %></body>
</html>
