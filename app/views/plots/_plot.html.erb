<% 	
	if plot.group_id != 27
		format = "lp "
	else
		format = "lp_row "
	end if
	color = plot.status.color.nil? ? "" : "lp_#{plot.status.color}"
	css_class = format + color
%>

<div id="<%= plot.id %>" class="<%= css_class %>">
	<%= link_to edit_plot_path(plot), class: "lp_link" do %>
		<%= plot.code %>
	<%end%>
	<div class="lp_desc_right">
		<%= plot.home_type %><br/>
		<%= plot.size %>
	</div>
	<div class="lp_desc_left">
		<%= plot.contractor_pay_no unless plot.contractor_pay_no == 5 %>
	</div>
</div>