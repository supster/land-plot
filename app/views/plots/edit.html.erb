<%= render "shared/error", error: @plot %>
<h2>Plot Information: <%= @plot.code %></h2>
<%= form_for @plot, html: {class: 'form-horizontal'} do |f| %>
	<div class="form-group">
		<%= f.label :status, class: "col-sm-2 col-sm-2 control-label" %>
		<div class="col-sm-6">
			<%= f.select :status_id, Status.all.collect { |s| [s.name, s.id] }, {}, {class: "form-control"} %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :home_type, class: "col-sm-2 col-sm-2 control-label" %>
		<div class="col-sm-6">
			<%= f.text_field :home_type, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :size, class: "col-sm-2 control-label" %>
		<div class="col-sm-6">
			<%= f.text_field :size, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :price, class: "col-sm-2 control-label" %>
		<div class="col-sm-6">
			<%= f.text_field :price, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :deed_no, class: "col-sm-2 control-label" %>
		<div class="col-sm-6">
			<%= f.text_field :deed_no, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :comments, class: "col-sm-2 control-label" %>
		<div class="col-sm-6">
			<%= f.text_area :comments, rows: 8, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-6">
		<%= f.submit "Save", class: "btn btn-sm btn-primary",
					style: "width: 120px" %>
		<%= link_to "Cancel", map_path(@plot.map_id),
					class: "btn btn-sm btn-primary", style: "width: 120px" %>
		</div>
	</div>		
<% end %>